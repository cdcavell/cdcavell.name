@using IdentityServer4.Extensions

@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}

<div class="nav-page">
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">

        <a href="https://cdcavell.name" class="navbar-brand">
            <img src="~/img/icon.png" width="32" height="32" class="icon-banner mb-2">
            CDCavell
        </a>

        <ul class="navbar-nav ml-auto">
            @if (!string.IsNullOrWhiteSpace(name))
            {
                <li class="nav-item dropdown m-auto">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">@name <b class="caret"></b></a>

                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
                    </div>
                </li>
            }
        </ul>

    </nav>
</div>
