
@{
    PageViewModel pageModel = (PageViewModel)ViewData["PageViewModel"];
    UserViewModel userModel = (UserViewModel)ViewData["UserViewModel"];
}


<div class="nav-page">
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">

        <a href="https://cdcavell.name" class="navbar-brand">
            <img src="~/img/icon.png" alt="logo" width="32" height="32" class="icon-banner mb-2">
            CDCavell
        </a>

        <ul class="navbar-nav ml-auto">
            @if (userModel.IsAuthenticated)
            {
                <li class="nav-item dropdown m-auto">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">@userModel.Email <b class="caret"></b></a>

                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
                    </div>
                </li>
            }
        </ul>

    </nav>
</div>
