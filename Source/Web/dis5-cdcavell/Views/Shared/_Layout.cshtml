<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

    <title>Personal website for Christopher D. Cavell</title>

    <link rel="icon" type="image/x-icon" href="~/img/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.ico" />

    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/css/bootstrap.min.css" nonce="@ViewBag.StyleNonce" />
    <link rel="stylesheet" type="text/css" href="~/lib/fontawesome-free/css/all.min.css" nonce="@ViewBag.StyleNonce" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" nonce="@ViewBag.StyleNonce" />
</head>
<body>
    <partial name="_Nav" />

    <div class="background-image"></div>
    <div class="background-gradient"></div>
    <div class="container body-container pt-4">
        @RenderBody()
    </div>

    <partial name="_Foot" />

    <script src="~/lib/jquery/jQuery-3.5.1-min.js" nonce="@ViewBag.ScriptNonce"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" nonce="@ViewBag.ScriptNonce"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
