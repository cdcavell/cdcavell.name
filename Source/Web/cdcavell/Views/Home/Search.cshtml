@model cdcavell.Models.Search.SearchModel

<form asp-action="Search" asp-controller="Home">
    <div class="input-group md-form form-sm form-2 shadow-sm pl-0">
        <input class="form-control border-grey my-0 py-1" type="text" placeholder="Search" aria-label="Search" asp-for="SearchRequest" autofocus>
        <div class="input-group-append">
            <span class="input-group-text lighten-3 border-grey p-0 px-1" id="basic-text1">
                <button class="btn btn-link m-0 p-0">
                    <i class="fas fa-search text-grey" aria-hidden="true"></i>
                </button>
            </span>
        </div>
    </div>
</form>
<blockquote class="@Model.MessageClass font-italic small p-1 pl-3">@Model.Message</blockquote>

@{
    if (Model.SearchResponse != null)
    {
        if (Model.SearchResponse.webPages != null)
        {
            if (Model.SearchResponse.webPages.value.Count() > 0)
            {
                <div class="col-lg-12">
                    <div class="shadow card">
                        <div class="card-header">
                            <h2>Search Results</h2>
                        </div>
                    </div>
                    <div class="card-body">
                        <ul>
                            @foreach (WebPage result in Model.SearchResponse.webPages.value)
                            {
                                <li>
                                    <div class="card">
                                        <div class="card-body">
                                            <p>Date: @result.dateLastCrawled</p>
                                            <p>Title: @result.name</p>
                                            <p>Url: @result.url</p>
                                            <p>Description: @result.snippet</p>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        }
    }
}